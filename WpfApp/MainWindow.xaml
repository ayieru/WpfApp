<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="アイコンエディター" Height="450" Width="800">
    <Grid Background="Black">

        <!--グリッドの作成-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--メニュー画面-->
        <Menu Grid.Row="0" Height="Auto">
            <MenuItem Header="ファイル(_F)">
                <MenuItem x:Name="MenuItem_New" Header="新規作成(N)...">
                    <MenuItem.Icon>
                        <Image Source="images/NewFile_16x.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="MenuItem_Open" Header="開く(O)...">
                    <MenuItem.Icon>
                        <Image Source="images/OpenFile_16x.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="MenuItem_Save" Header="上書き保存(S)">
                    <MenuItem.Icon>
                        <Image Source="images/Save_grey_16x.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="MenuItem_NameSave" Header="名前を付けて上書き保存(A)" Checked="MenuItem_NameSave_Checked">
                    <MenuItem.Icon>
                        <Image Source="images/SaveAs_16.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="MenuItem_End" Header="終了(X)">
                    <MenuItem.Icon>
                        <Image Source="images/Exit_16x.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="編集(_E)">
            </MenuItem>
        </Menu>
        
        <Canvas Grid.Row="1" x:Name="MainCanvas" Height="640" Width="640" Background="#FF04D1FF" Initialized="MainCanvas_Initialized"/>

        
    </Grid>
</Window>
